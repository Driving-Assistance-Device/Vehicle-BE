generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int       @id @default(autoincrement())
  name         String    @db.VarChar(25)
  email        String    @unique(map: "email") @db.VarChar(100)
  password     String    @db.VarChar(255)
  createdAt    DateTime  @default(now()) @map("created_at") @db.DateTime(6)
  updatedAt    DateTime @default(now()) @updatedAt @map("updated_at") @db.DateTime(6)
  refreshToken String?   @db.VarChar(500)
  Drivings     Driving[]

  @@map("user")
}

model Vehicle {
  id       Int       @id @default(autoincrement())
  status   Boolean   @default(false)
  Drivings Driving[]

  @@map("vehicle")
}

model Driving {
  id        Int      @id @default(autoincrement())
  userId    Int      @db.Int @map("user_id")
  user      User     @relation(fields: [userId], references: [id])
  vehicleId Int      @db.Int @map("vehicle_id")
  vehicle   Vehicle  @relation(fields: [vehicleId], references: [id])
  headway   Int      @db.Int
  bias      Int      @db.Int
  mileage   Float    @db.Float
  startTime DateTime @db.DateTime(6) @map("start_time")
  endTime   DateTime @db.DateTime(6) @map("end_time")
  createdAt DateTime @default(now()) @map("created_at") @db.DateTime(6)
  Eyes      Eyes[]

  @@map("driving")
}

model Eyes {
  id        Int     @id @default(autoincrement())
  drivingId Int     @db.Int @map("driving_id")
  driving   Driving @relation(fields: [drivingId], references: [id])
  left      Int     @db.Int
  right     Int     @db.Int
  front     Int     @db.Int

  @@map("eyes")
}
